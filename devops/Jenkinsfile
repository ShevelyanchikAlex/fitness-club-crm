pipeline {
        agent any

        stages {
            stage('Project build') {
                steps {
                    sh 'devops/build.sh'
                }
            }

            stage('Docker build') {
                steps {
                    sh 'devops/docker-build.sh'
                }
            }

            stage('Docker push') {
                steps {
                    sh 'devops/docker-push.sh'
                }
            }

            stage('Kubernetes deploy') {
                steps {
                    sh 'devops/kubernetes-deploy.sh'
                }
            }
        }
    }